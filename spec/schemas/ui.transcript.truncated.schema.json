{
  "$id": "https://agentvoice/spec/ui.transcript.truncated.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UI Transcript Truncated Envelope",
  "description": "Signals that historical transcript entries have been truncated due to retention limits.",
  "allOf": [
    { "$ref": "https://agentvoice/spec/envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "ui.transcript.truncated" },
        "version": { "pattern": "^1\\.0\\.\\d+$" },
        "source": { "const": "host" },
        "payload": {
          "type": "object",
          "properties": {
            "retained": { "type": "number", "minimum": 0 }
          },
          "additionalProperties": false
        }
      },
      "required": ["type", "version", "source", "payload"]
    }
  ]
}
