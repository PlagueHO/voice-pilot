{
  "$id": "https://voicepilot/spec/audio.feedback.event.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Audio Feedback Event Envelope",
  "description": "Playback event emitted by the webview audio feedback player.",
  "allOf": [
    { "$ref": "https://voicepilot/spec/envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "audio.feedback.event" },
        "version": { "pattern": "^1\\.0\\.\\d+$" },
        "source": { "const": "webview" },
        "payload": {
          "type": "object",
          "required": ["handleId", "cueId", "status"],
          "properties": {
            "handleId": { "type": "string", "minLength": 1 },
            "cueId": {
              "type": "string",
              "enum": [
                "session.start",
                "session.end",
                "listening.prompt",
                "thinking.transition",
                "speaking.transition",
                "interruption.detected",
                "error.critical",
                "degraded.enter",
                "degraded.exit"
              ]
            },
            "status": {
              "type": "string",
              "enum": ["played", "failed", "suppressed", "stopped"]
            },
            "latencyMs": { "type": ["number", "null"], "minimum": 0 },
            "errorCode": { "type": ["string", "null"] },
            "ducking": {
              "type": ["string", "null"],
              "enum": ["none", "attenuate", "pause", "crossfade", null]
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["type", "version", "source", "payload"]
    }
  ]
}
