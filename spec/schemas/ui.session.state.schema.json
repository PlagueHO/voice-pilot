{
  "$id": "https://agentvoice/spec/ui.session.state.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UI Session State Envelope",
  "description": "Session state payload communicated from the host to the Agent Voice webview UI.",
  "allOf": [
  { "$ref": "https://agentvoice/spec/envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "ui.session.state" },
        "version": { "pattern": "^1\\.(0|1)\\.\\d+$" },
        "source": { "const": "host" },
        "payload": {
          "type": "object",
          "required": [
            "status",
            "statusLabel",
            "copilotAvailable",
            "microphoneStatus",
            "transcript",
            "fallbackActive"
          ],
          "properties": {
            "sessionId": { "type": ["string", "null"], "minLength": 1 },
            "status": {
              "type": "string",
              "enum": ["ready", "listening", "thinking", "speaking", "error", "copilot-unavailable"]
            },
            "statusLabel": { "type": "string", "minLength": 1 },
            "statusMode": { "type": ["string", "null"] },
            "statusDetail": { "type": ["string", "null"] },
            "fallbackActive": { "type": "boolean" },
            "sessionStartedAt": { "type": ["string", "null"], "format": "date-time" },
            "elapsedSeconds": { "type": ["number", "null"], "minimum": 0 },
            "renewalCountdownSeconds": { "type": ["number", "null"], "minimum": 0 },
            "copilotAvailable": { "type": "boolean" },
            "pendingAction": {
              "type": ["string", "null"],
              "enum": ["start", "stop", "configure", null]
            },
            "microphoneStatus": {
              "type": "string",
              "enum": ["idle", "capturing", "muted", "permission-denied"]
            },
            "transcript": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["entryId", "speaker", "content", "timestamp"],
                "properties": {
                  "entryId": { "type": "string", "minLength": 1 },
                  "speaker": { "type": "string", "enum": ["user", "agentvoice", "copilot"] },
                  "content": { "type": "string" },
                  "timestamp": { "type": "string", "format": "date-time" },
                  "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
                  "partial": { "type": "boolean" }
                },
                "additionalProperties": false
              }
            },
            "truncated": { "type": "boolean" },
            "diagnostics": {
              "type": ["object", "null"],
              "properties": {
                "interruptionLatencyMs": { "type": "number", "minimum": 0 },
                "interruptionCount": { "type": "number", "minimum": 0 },
                "cooldownActive": { "type": "boolean" },
                "fallbackActive": { "type": "boolean" }
              },
              "additionalProperties": false
            },
            "error": {
              "type": ["object", "null"],
              "properties": {
                "code": { "type": "string", "minLength": 1 },
                "summary": { "type": "string", "minLength": 1 },
                "remediation": { "type": ["string", "null"] }
              },
              "required": ["code", "summary"],
              "additionalProperties": false
            },
            "audioFeedback": {
              "type": ["object", "null"],
              "properties": {
                "degraded": { "type": "boolean" },
                "reason": { "type": ["string", "null"] }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "required": ["type", "version", "source", "payload"]
    }
  ]
}
