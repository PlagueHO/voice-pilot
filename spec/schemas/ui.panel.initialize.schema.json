{
  "$id": "https://voicepilot/spec/ui.panel.initialize.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "UI Panel Initialize Envelope",
  "description": "Initial state snapshot delivered to the VoicePilot webview during bootstrap.",
  "allOf": [
    { "$ref": "https://voicepilot/spec/envelope.schema.json" },
    {
      "type": "object",
      "properties": {
        "type": { "const": "ui.panel.initialize" },
        "version": { "pattern": "^1\\.0\\.\\d+$" },
        "source": { "const": "host" },
        "payload": {
          "type": "object",
          "required": ["state"],
          "properties": {
            "state": { "$ref": "https://voicepilot/spec/ui.session.state.schema.json#/allOf/1/properties/payload" }
          },
          "additionalProperties": false
        }
      },
      "required": ["type", "version", "source", "payload"]
    }
  ]
}
