{
  "name": "voicepilot",
  "displayName": "VoicePilot",
  "description": "A conversational coding assistant for VS Code that integrates with GPT-Realtime for voice interaction.",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "activationEvents": [
    "onCommand:voicepilot.start"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "contributes": {
    "commands": [
      {
        "command": "voicepilot.start",
        "title": "Start VoicePilot"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "voicepilot.start",
          "when": "editorTextFocus",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "@azure/identity": "^4.0.1",
    "openai": "^5.20.2",
    "microsoft-cognitiveservices-speech-sdk": "^1.45.0",
    "ws": "^8.18.0",
    "axios": "^1.7.7"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "18.x",
    "@types/ws": "^8.5.13",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
