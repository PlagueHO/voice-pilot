# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# TypeScript, JavaScript, JSON
[*.{ts,js,json,jsonc}]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
trim_trailing_whitespace = false
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Package.json
[package.json]
indent_style = space
indent_size = 2

# VS Code specific files
[*.code-workspace]
indent_style = space
indent_size = 4

# Configuration files
[*.{conf,cfg,ini}]
indent_style = space
indent_size = 4

# Shell scripts
[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

# Bicep files (Azure)
[*.bicep]
indent_style = space
indent_size = 2

# Terraform files
[*.{tf,tfvars}]
indent_style = space
indent_size = 2
